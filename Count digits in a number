import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
   
    System.out.println("Enter the number ");
     int num=scan.nextInt();
     int digit=0;
     
     while(num!=0)
     {
         num=num/10;
         digit++;
     }
    System.out.println("The number of digits are" +" "+ digit);
    
    }
}
